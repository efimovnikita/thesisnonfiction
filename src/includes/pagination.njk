<nav class="pagination">
  {% if pagination.href.previous %}
    <a class="pagination__button pagination__button_active" href="{{ pagination.href.previous }}">prev</a>
  {% else %}
    <a class="pagination__button pagination__button_inactive">prev</a>
  {% endif %}
  <div class="pagination__items">
    {%- for pageEntry in pagination.pages %}
      {% if page.url == pagination.hrefs[ loop.index0 ] %}
        <a href="#" class="pagination__item">{{ loop.index }}</a>
      {% endif %}
    {%- endfor %}
  </div>
  {% if pagination.href.next %}
    <a class="pagination__button pagination__button_active" href="{{ pagination.href.next }}">next</a>
  {% else %}
    <a class="pagination__button pagination__button_inactive">next</a>
  {% endif %}
</nav>