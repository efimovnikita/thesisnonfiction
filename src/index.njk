---
layout: posts.njk
pagination:
  data: collections.posts
  size: 10
---

{%- for post in pagination.items -%}
    <article>
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        {{ post.templateContent | safe }}
        <footer>
        <img src="/images/calendar.svg" alt="date" />
        <time>{{ post.data.date.toLocaleString('ru-RU', {year: "numeric",month: "2-digit",day: "numeric"}) }}</time>
        <img src="/images/folder.svg" alt="category" />
        {% set navPages = collections.all | eleventyNavigation %}
        {%- for entry in navPages %}
        {% if entry.title == post.data.book %}
            <aside><a href="{{ entry.url }}">{{ post.data.book }}</a></aside>
        {% endif %}
        {%- endfor %}
        </footer>
    </article>
{%- endfor -%}